<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kekeruhan_air">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Kekeruhan Air"
                android:drawableBottom="@drawable/temperature"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/staticMurky"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:text="Air Keruh :" />

            <TextView
                android:id="@+id/murkyLobtenk"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/staticCangkang"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:text="Ganti Kulit :" />

            <TextView
                android:id="@+id/cangkangLobtenk"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/staticTanggal3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:text="Tanggal :" />

            <TextView
                android:id="@+id/tanggalUser3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSetKeruh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/blue"
                android:text="Setting Kekeruhan Air"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>